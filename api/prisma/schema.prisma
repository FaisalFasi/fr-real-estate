generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  images     String[]
  address    String
  city       String
  price      Int
  bedroom    Int
  bathroom   Int
  latitude   String
  longitude  String
  type       Type
  property   Property
  createdAt  DateTime    @default(now())
  user       User        @relation(fields: [userId], references: [id])
  userId     String      @db.ObjectId
  postDetail PostDetail?
  savedPost  SavedPost[]
}

enum Type {
  buy
  rent
}

enum Property {
  apartment
  house
  condo
  land
}

model PostDetail {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  desc       String
  utilities  String?
  pet        String?
  income     String?
  size       Int?
  school     Int?
  bus        Int?
  restaurant Int?
  post       Post    @relation(fields: [postId], references: [id])
  postId     String  @unique @db.ObjectId
}

model SavedPost {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  post      Post     @relation(fields: [postId], references: [id])
  userId    String   @unique @db.ObjectId
  postId    String   @unique @db.ObjectId
  createdAt DateTime @default(now())

  @@unique([userId, postId])
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  username  String   @unique
  password  String
  avatar    String?
  createdAt DateTime @default(now())
  posts     Post[]

  savedPost SavedPost[]
}

// what does this line means  >> @id @default(auto()) @map("_id") @db.ObjectId
// @id means that this field is the primary key of the model
// @default(auto()) means that the field will be automatically generated by the database
// @map("_id") means that the field will be mapped to the _id field in the database
// @db.ObjectId means that the field will be stored as an ObjectId in the database

// what does this line means in savedpost model  >>  user   User   @relation(fields: [userId], references: [id])
// fields: [userId] means that the userId field in the SavedPost model is the foreign key
// references: [id] means that the foreign key references the id field in the User model

// what does this line means in savedpost model  >>  @@unique([userId, postId])
// @@unique([userId, postId]) means that the combination of userId and postId must be unique in the database
// This means that a user can only save a post once.
// If a user tries to save the same post multiple times,
// the database will throw an error because the combination of userId and postId must be unique.
// This ensures that a user can only save a post once.
