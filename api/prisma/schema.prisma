generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Post {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  price      Int
  address    String
  city       String
  bedroom    Int
  bathroom   Int
  type       Type
  property   Property
  latitude   Float
  longitude  Float
  images     String[]
  createdAt  DateTime    @default(now())
  user       User        @relation(fields: [userId], references: [id])
  userId     String      @db.ObjectId
  postDetail PostDetail?
}

enum Type {
  any
  buy
  rent
}

enum Property {
  apartment
  house
  condo
  land
}

model PostDetail {
  id         String  @id @default(auto()) @map("_id") @db.ObjectId
  desc       String
  utilities  String?
  pet        String?
  income     String?
  size       Int?
  school     Int?
  bus        Int?
  restaurant Int?
  post       Post    @relation(fields: [postId], references: [id])
  postId     String  @unique @db.ObjectId
  user       User?   @relation(fields: [userId], references: [id])
  userId     String? @db.ObjectId
}

model User {
  id         String       @id @default(auto()) @map("_id") @db.ObjectId
  email      String       @unique
  username   String       @unique
  password   String
  avatar     String?
  createdAt  DateTime     @default(now())
  posts      Post[]
  postDetail PostDetail[]
}

// what does this line means  >> @id @default(auto()) @map("_id") @db.ObjectId
// @id means that this field is the primary key of the model
// @default(auto()) means that the field will be automatically generated by the database
// @map("_id") means that the field will be mapped to the _id field in the database
// @db.ObjectId means that the field will be stored as an ObjectId in the database
